{
  "name": "morning-brief",
  "version": "1.0.0",
  "description": "A newsletter system that fetches, summarizes, and sends news articles to subscribers",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "tsx src/index.ts send",
    "preview": "tsx src/index.ts preview",
    "test": "tsx src/index.ts test",
    "build": "tsc",
    "dev": "tsx --watch src/index.ts preview",
    "clean": "rimraf dist"
  },
  "keywords": [
    "newsletter",
    "news",
    "email",
    "gnews"
  ],
  "author": "Kailash",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.58.0",
    "axios": "^1.11.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^17.2.0",
    "nodemailer": "^7.0.5",
    "openai": "^5.10.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.0.15",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KiddKailash/MorningBrief"
  }
}
