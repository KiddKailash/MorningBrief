{
  "name": "news-newsletter",
  "version": "1.0.0",
  "description": "An automated newsletter system that fetches, summarizes, and sends news articles to subscribers",
  "main": "dist/app.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "start": "tsx src/app.ts",
    "start:prod": "node dist/app.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "get-articles": "tsx src/scripts/getResources.ts",
    "summarize": "tsx src/scripts/summariseArticles.ts",
    "newsletter": "tsx src/app.ts",
    "newsletter:full": "npm run get-articles && npm run summarize && npm run start:prod"
  },
  "keywords": [
    "newsletter",
    "news",
    "automation",
    "email",
    "typescript",
    "gnews"
  ],
  "author": "Kailash",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^17.2.0",
    "nodemailer": "^7.0.5",
    "openai": "^5.10.1",
    "tsc": "^2.0.4"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.0.15",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/news-newsletter.git"
  }
}
