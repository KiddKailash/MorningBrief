{
  "name": "morning-brief",
  "version": "1.0.0",
  "description": "A newsletter system that fetches, summarizes, and sends news articles to subscribers",
  "main": "dist/newsletter.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "tsx src/newsletter.ts",
    "start:prod": "node dist/newsletter.js",
    "preview": "tsx src/newsletter.ts --preview",
    "preview:edit": "tsx src/newsletter.ts --preview --editable",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist"
  },
  "keywords": [
    "newsletter",
    "news",
    "email",
    "gnews"
  ],
  "author": "Kailash",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^17.2.0",
    "nodemailer": "^7.0.5",
    "openai": "^5.10.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.0.15",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/news-newsletter.git"
  }
}
